#!/bin/bash

cd $HOME/code/.;

perl <<'END_OF_PERL' 
    print "# THIS FILE IS AUTOMATICALLY GENERATED. DO NOT EDIT DIRECTLY.\n";
    print `perl -I$ENV{HOME}/perl5/lib/perl5/ -Mlocal::lib=$ENV{HOME}/perl5/`;
    print "\n";
    print `cat crontab`;
END_OF_PERL

perl <<'END_OF_PERL' | crontab -
    print "# THIS FILE IS AUTOMATICALLY GENERATED. DO NOT EDIT DIRECTLY.\n";
    print `perl -I$ENV{HOME}/perl5/lib/perl5/ -Mlocal::lib=$ENV{HOME}/perl5/`;
    print "\n";
    print `cat crontab`;
END_OF_PERL
echo installed crontab


